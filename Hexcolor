<script>
function color(print) {

var last, check, proceed = true;

if (proceed = true) {
var result = document.getElementById("color").value;
check = document.getElementById("reponse");
last = check.lastChild;
print = last.innerHTML = '<strong style="color: ' + result + ';">' + result + '</strong>';
} else {
proceed = false;
}
}
</script>
